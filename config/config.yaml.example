# Configuration globale trading-app
exchange:
  name: "binance"           # Nom de l'exchange (supporté par CCXT)
  api_key: "YOUR_API_KEY"   # Clé API — NE PAS COMMITER
  api_secret: "YOUR_SECRET" # Secret API — NE PAS COMMITER
  # password: "YOUR_PASSPHRASE"  # Passphrase/password — requis par Bitget, Kucoin, OKX (optionnel pour Binance)
  testnet: true             # Utiliser le testnet (recommandé pour les tests)

paths:
  logs: "data/logs"
  trades: "data/trades"
  state: "data/state.json"
  backup: "data/backups"    # Répertoire de destination des backups de logs

defaults:
  log_level: "INFO"         # INFO ou DEBUG
  risk_percent: 1.0         # % du capital risqué par trade
  backup_interval_hours: 24 # Fréquence de backup en heures (défaut: 24h)
